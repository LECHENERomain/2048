<VBox alignment="CENTER" prefHeight="918.0" prefWidth="1185.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.univartois.butinfo.ihm.DeuxMilleQuaranteHuitController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <AnchorPane prefHeight="200.0" prefWidth="200.0">
         <children>
            <Button fx:id="restartButton" layoutX="30.0" layoutY="161.0" mnemonicParsing="false" onAction="#onRestartButtonClick" text="Restart game" />
            <Button fx:id="ShowScore" layoutX="845.0" layoutY="161.0" mnemonicParsing="false" onAction="#onShowScoreButtonClick" text="Show score" />
            <Button fx:id="upButton" layoutX="1022.0" layoutY="111.0" mnemonicParsing="false" onAction="#onUpButtonClick" text="Up" />
            <Button fx:id="downButton" layoutX="1014.0" layoutY="161.0" mnemonicParsing="false" onAction="#onDownButtonClick" text="Down" />
            <Button fx:id="rightButton" layoutX="1061.0" layoutY="136.0" mnemonicParsing="false" onAction="#onRightButtonClick" text="Right" />
            <Button fx:id="leftButton" layoutX="978.0" layoutY="136.0" mnemonicParsing="false" onAction="#onLeftButtonClick" text="Left" />
            <Label fx:id="score" alignment="CENTER" layoutX="14.0" layoutY="14.0" prefHeight="125.0" prefWidth="759.0" text="2048" visible="false">
               <font>
                  <Font size="72.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <GridPane fx:id="gridNumbers" gridLinesVisible="true" VBox.vgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
      </GridPane>
   </children>
</VBox>
